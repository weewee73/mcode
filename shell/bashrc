# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

export LANG=zh_CN.UTF-8
# User specific aliases and functions
alias vi='vim'
alias grep='grep --color=auto'
alias mnote='vim -c start ~/github/mcode/journal/note.log'
alias mtask='vim -c start ~/github/mcode/journal/task.log'
alias mshell='vim + ~/github/mcode/journal/shell.log'
alias ashell='echo >>$HOME/github/mcode/journal/shell.log'
alias mquestion='vim -c start ~/github/mcode/journal/question.log'
alias man='$HOME/github/mcode/shell/mman.sh'

mcode="$HOME/github/mcode"

PROMPT_COMMAND='echo -ne "\n\e[1;35m[$(~/github/mcode/shell/mword.sh)]\e[m\n"'
